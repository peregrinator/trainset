<div class="user_action_wrapper">
  <h2>Reset Password</h2>

  <%= semantic_form_for(resource, :as => resource_name, :url => password_path(resource_name), :html => { :method => :post }) do |f| %>
    <%= devise_error_messages! %>
  
    <%= f.inputs do %>
      <%= f.input :email, :as => :email %>
    <% end -%>

    <%= f.actions do %>
      <%= f.action :submit, :as => :button, :label => "Send me password reset instructions", :button_html => {:class => "btn"} %>
    <% end -%>
  <% end -%>

  <%= render :partial => "devise/shared/links" %>
</div>
