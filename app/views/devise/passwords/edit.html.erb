<div class="user_action_wrapper">
  <h2>Change your password</h2>

  <%= semantic_form_for(resource, :as => resource_name, :url => password_path(resource_name), :html => { :method => :put }) do |f| %>
    <%= devise_error_messages! %>

    <%= f.inputs do %>
      <%= f.input :reset_password_token, :as => hidden_field %>

      <%= f.input :password, :as => :password, :label => "New Password" %>
      <%= f.input :password_confirmation, :as => :password, :label => "Confirm new password" %>
    <% end -%>

    <%= f.actions do %>
      <%= f.input :submit, :as => :button, :label => "Change my password", :button_html => {:class => "btn"} %>
    <% end -%>
  <% end %>

  <%= render :partial => "devise/shared/links" %>
</div>
